html
  head
    title
      | Chart Mind

    link(
      rel="icon"
      type="image/svg+xml"
      href="/vite.svg"
    )
    
    meta(charset="UTF-8")
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    )

    if (environment === 'production')
      link(
        rel="stylesheet"
        href=manifest['source/main.js'].css[0]
      )

  body
    .header
      | DEPT

    div(
      id="app"
    )

    if environment === 'production'
      script(
        type="module"
        src=manifest['source/main.js'].file
      )
    else
      script(
        type="module"
        src="http://localhost:5173/@vite/client"
      )
      script(
        type="module"
        src="http://localhost:5173/source/main.js"
      )
